{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus", "pluginName": "Prometheus" }],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" }
  ],
  "annotations": { "list": [{ "builtIn": 1, "datasource": { "type": "grafana", "uid": "-- Grafana --" }, "enable": true, "hide": true, "iconColor": "rgba(0, 211, 255, 1)", "name": "Annotations & Alerts", "type": "dashboard" }] },
  "description": "Lomash Wood — Business Metrics: revenue, orders, bookings, customer signups, brochure requests, newsletter subs",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }, "id": 100, "title": "Today's KPIs", "type": "row" },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }, "unit": "currencyGBP" }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 1,
      "options": { "colorMode": "background", "graphMode": "area", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Revenue Today (GBP)",
      "type": "stat",
      "targets": [{ "expr": "sum(increase(payment_revenue_total_pence{job=\"order-payment-service\"}[24h])) / 100", "legendFormat": "revenue", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }, "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "id": 2,
      "options": { "colorMode": "background", "graphMode": "area", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Orders Today",
      "type": "stat",
      "targets": [{ "expr": "sum(increase(orders_created_total{job=\"order-payment-service\"}[24h]))", "legendFormat": "orders", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }, "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "id": 3,
      "options": { "colorMode": "background", "graphMode": "area", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Bookings Today",
      "type": "stat",
      "targets": [{ "expr": "sum(increase(bookings_created_total{job=\"appointment-service\"}[24h]))", "legendFormat": "bookings", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }, "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "id": 4,
      "options": { "colorMode": "background", "graphMode": "area", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "New Signups Today",
      "type": "stat",
      "targets": [{ "expr": "sum(increase(auth_registration_total{job=\"auth-service\"}[24h]))", "legendFormat": "signups", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }, "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "id": 5,
      "options": { "colorMode": "background", "graphMode": "area", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Brochure Requests Today",
      "type": "stat",
      "targets": [{ "expr": "sum(increase(brochure_requests_total{job=\"content-service\"}[24h]))", "legendFormat": "requests", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }, "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "id": 6,
      "options": { "colorMode": "background", "graphMode": "area", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Newsletter Subs Today",
      "type": "stat",
      "targets": [{ "expr": "sum(increase(newsletter_subscriptions_total{job=\"customer-service\"}[24h]))", "legendFormat": "subs", "refId": "A" }]
    },
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 }, "id": 101, "title": "Revenue & Orders Trend", "type": "row" },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "custom": { "lineWidth": 2, "fillOpacity": 10 }, "unit": "currencyGBP", "color": { "mode": "palette-classic" } }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "id": 10,
      "options": { "tooltip": { "mode": "multi", "sort": "desc" }, "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["sum"] } },
      "title": "Revenue (GBP) — Rolling Window",
      "type": "timeseries",
      "targets": [
        { "expr": "sum(rate(payment_revenue_total_pence{job=\"order-payment-service\"}[1h])) / 100 * 3600", "legendFormat": "GBP/hr", "refId": "A" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "custom": { "lineWidth": 2, "fillOpacity": 10 }, "unit": "reqps", "color": { "mode": "palette-classic" } }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "id": 11,
      "options": { "tooltip": { "mode": "multi", "sort": "desc" }, "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean"] } },
      "title": "Orders & Bookings Rate",
      "type": "timeseries",
      "targets": [
        { "expr": "sum(rate(orders_created_total{job=\"order-payment-service\"}[5m]))", "legendFormat": "Orders", "refId": "A" },
        { "expr": "sum(rate(bookings_created_total{job=\"appointment-service\"}[5m]))", "legendFormat": "Bookings", "refId": "B" },
        { "expr": "sum(rate(auth_registration_total{job=\"auth-service\"}[5m]))", "legendFormat": "Signups", "refId": "C" }
      ]
    },
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 }, "id": 102, "title": "Conversion Funnel", "type": "row" },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "custom": { "lineWidth": 2, "fillOpacity": 10 }, "unit": "reqps", "color": { "mode": "palette-classic" } }, "overrides": [] },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 15 },
      "id": 20,
      "options": { "tooltip": { "mode": "multi", "sort": "desc" }, "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean"] } },
      "title": "Conversion Funnel: Sessions → Orders",
      "type": "timeseries",
      "targets": [
        { "expr": "sum(rate(analytics_sessions_total{job=\"analytics-service\"}[5m]))", "legendFormat": "Sessions", "refId": "A" },
        { "expr": "sum(rate(analytics_product_views_total{job=\"analytics-service\"}[5m]))", "legendFormat": "Product Views", "refId": "B" },
        { "expr": "sum(rate(orders_created_total{job=\"order-payment-service\"}[5m]))", "legendFormat": "Orders Created", "refId": "C" },
        { "expr": "sum(rate(payment_succeeded_total{job=\"order-payment-service\"}[5m]))", "legendFormat": "Payments Completed", "refId": "D" }
      ]
    },
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 }, "id": 103, "title": "Customer Enquiries", "type": "row" },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "custom": { "lineWidth": 2, "fillOpacity": 10 }, "unit": "reqps", "color": { "mode": "palette-classic" } }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "id": 30,
      "options": { "tooltip": { "mode": "multi" }, "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] } },
      "title": "Enquiry Types Rate",
      "type": "timeseries",
      "targets": [
        { "expr": "sum(rate(brochure_requests_total[5m]))", "legendFormat": "Brochure Requests", "refId": "A" },
        { "expr": "sum(rate(business_inquiries_total[5m]))", "legendFormat": "Business Inquiries", "refId": "B" },
        { "expr": "sum(rate(newsletter_subscriptions_total[5m]))", "legendFormat": "Newsletter Subs", "refId": "C" },
        { "expr": "sum(rate(contact_form_submissions_total[5m]))", "legendFormat": "Contact Forms", "refId": "D" }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "custom": { "lineWidth": 2, "fillOpacity": 10 }, "unit": "reqps", "color": { "mode": "palette-classic" } }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "id": 31,
      "options": { "tooltip": { "mode": "multi" }, "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] } },
      "title": "Reviews & Support Tickets",
      "type": "timeseries",
      "targets": [
        { "expr": "sum(rate(customer_reviews_total{job=\"customer-service\"}[5m]))", "legendFormat": "Reviews", "refId": "A" },
        { "expr": "sum(rate(customer_support_tickets_created_total{job=\"customer-service\"}[5m]))", "legendFormat": "Support Tickets", "refId": "B" }
      ]
    }
  ],
  "refresh": "60s",
  "schemaVersion": 38,
  "tags": ["lomash-wood", "business-metrics"],
  "templating": { "list": [] },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Business Metrics",
  "uid": "lomash-business-metrics",
  "version": 1,
  "weekStart": ""
}
