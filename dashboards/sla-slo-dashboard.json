{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus", "pluginName": "Prometheus" }],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "gauge", "name": "Gauge", "version": "" }
  ],
  "annotations": { "list": [{ "builtIn": 1, "datasource": { "type": "grafana", "uid": "-- Grafana --" }, "enable": true, "hide": true, "iconColor": "rgba(0, 211, 255, 1)", "name": "Annotations & Alerts", "type": "dashboard" }] },
  "description": "Lomash Wood — SLA / SLO tracking: availability, latency budgets, error budgets, burn rate per service",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }, "id": 100, "title": "Availability SLOs (Target: 99.9%)", "type": "row" },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99.5 }, { "color": "green", "value": 99.9 }] }, "unit": "percent", "min": 99, "max": 100, "decimals": 3 }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 1,
      "options": { "colorMode": "background", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "API Gateway Availability",
      "type": "stat",
      "targets": [{ "expr": "sum(rate(http_requests_total{job=\"api-gateway\",status!~\"5..\"}[$__range])) / sum(rate(http_requests_total{job=\"api-gateway\"}[$__range])) * 100", "legendFormat": "availability %", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99.5 }, { "color": "green", "value": 99.9 }] }, "unit": "percent", "min": 99, "max": 100, "decimals": 3 }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "id": 2,
      "options": { "colorMode": "background", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Auth Service Availability",
      "type": "stat",
      "targets": [{ "expr": "sum(rate(http_requests_total{job=\"auth-service\",status!~\"5..\"}[$__range])) / sum(rate(http_requests_total{job=\"auth-service\"}[$__range])) * 100", "legendFormat": "availability %", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99.5 }, { "color": "green", "value": 99.9 }] }, "unit": "percent", "min": 99, "max": 100, "decimals": 3 }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "id": 3,
      "options": { "colorMode": "background", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Order/Payment Availability",
      "type": "stat",
      "targets": [{ "expr": "sum(rate(http_requests_total{job=\"order-payment-service\",status!~\"5..\"}[$__range])) / sum(rate(http_requests_total{job=\"order-payment-service\"}[$__range])) * 100", "legendFormat": "availability %", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99.5 }, { "color": "green", "value": 99.9 }] }, "unit": "percent", "min": 99, "max": 100, "decimals": 3 }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "id": 4,
      "options": { "colorMode": "background", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Appointment Availability",
      "type": "stat",
      "targets": [{ "expr": "sum(rate(http_requests_total{job=\"appointment-service\",status!~\"5..\"}[$__range])) / sum(rate(http_requests_total{job=\"appointment-service\"}[$__range])) * 100", "legendFormat": "availability %", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99.5 }, { "color": "green", "value": 99.9 }] }, "unit": "percent", "min": 99, "max": 100, "decimals": 3 }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "id": 5,
      "options": { "colorMode": "background", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Content Service Availability",
      "type": "stat",
      "targets": [{ "expr": "sum(rate(http_requests_total{job=\"content-service\",status!~\"5..\"}[$__range])) / sum(rate(http_requests_total{job=\"content-service\"}[$__range])) * 100", "legendFormat": "availability %", "refId": "A" }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 99.5 }, { "color": "green", "value": 99.9 }] }, "unit": "percent", "min": 99, "max": 100, "decimals": 3 }, "overrides": [] },
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "id": 6,
      "options": { "colorMode": "background", "graphMode": "none", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Customer Service Availability",
      "type": "stat",
      "targets": [{ "expr": "sum(rate(http_requests_total{job=\"customer-service\",status!~\"5..\"}[$__range])) / sum(rate(http_requests_total{job=\"customer-service\"}[$__range])) * 100", "legendFormat": "availability %", "refId": "A" }]
    },
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 }, "id": 101, "title": "Error Budgets (30-day rolling)", "type": "row" },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 25 }, { "color": "green", "value": 50 }] },
          "unit": "percent", "min": 0, "max": 100
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 6 },
      "id": 10,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "showThresholdLabels": true, "showThresholdMarkers": true },
      "title": "API Gateway — Error Budget Remaining %",
      "type": "gauge",
      "targets": [{
        "expr": "(1 - (sum(rate(http_requests_total{job=\"api-gateway\",status=~\"5..\"}[30d])) / sum(rate(http_requests_total{job=\"api-gateway\"}[30d]))) / (1 - 0.999)) * 100",
        "legendFormat": "budget %", "refId": "A"
      }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 25 }, { "color": "green", "value": 50 }] },
          "unit": "percent", "min": 0, "max": 100
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 6 },
      "id": 11,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "showThresholdLabels": true, "showThresholdMarkers": true },
      "title": "Order/Payment — Error Budget Remaining %",
      "type": "gauge",
      "targets": [{
        "expr": "(1 - (sum(rate(http_requests_total{job=\"order-payment-service\",status=~\"5..\"}[30d])) / sum(rate(http_requests_total{job=\"order-payment-service\"}[30d]))) / (1 - 0.999)) * 100",
        "legendFormat": "budget %", "refId": "A"
      }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 25 }, { "color": "green", "value": 50 }] },
          "unit": "percent", "min": 0, "max": 100
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 6 },
      "id": 12,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "showThresholdLabels": true, "showThresholdMarkers": true },
      "title": "Auth Service — Error Budget Remaining %",
      "type": "gauge",
      "targets": [{
        "expr": "(1 - (sum(rate(http_requests_total{job=\"auth-service\",status=~\"5..\"}[30d])) / sum(rate(http_requests_total{job=\"auth-service\"}[30d]))) / (1 - 0.999)) * 100",
        "legendFormat": "budget %", "refId": "A"
      }]
    },
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 }, "id": 102, "title": "Latency SLOs (p99 < 500ms)", "type": "row" },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "custom": { "lineWidth": 2, "fillOpacity": 5 }, "unit": "ms", "color": { "mode": "palette-classic" } }, "overrides": [] },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 15 },
      "id": 20,
      "options": { "tooltip": { "mode": "multi", "sort": "desc" }, "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] } },
      "title": "p99 Latency per Service vs 500ms SLO",
      "type": "timeseries",
      "targets": [
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_ms_bucket{job=\"api-gateway\"}[5m])) by (le))", "legendFormat": "API Gateway", "refId": "A" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_ms_bucket{job=\"auth-service\"}[5m])) by (le))", "legendFormat": "Auth", "refId": "B" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_ms_bucket{job=\"order-payment-service\"}[5m])) by (le))", "legendFormat": "Order/Payment", "refId": "C" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_ms_bucket{job=\"appointment-service\"}[5m])) by (le))", "legendFormat": "Appointment", "refId": "D" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_ms_bucket{job=\"content-service\"}[5m])) by (le))", "legendFormat": "Content", "refId": "E" },
        { "expr": "500", "legendFormat": "SLO Threshold (500ms)", "refId": "F" }
      ]
    },
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 }, "id": 103, "title": "Burn Rate Alerts", "type": "row" },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "custom": { "lineWidth": 2, "fillOpacity": 10 }, "unit": "short", "color": { "mode": "palette-classic" } }, "overrides": [] },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "id": 30,
      "options": { "tooltip": { "mode": "multi" }, "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] } },
      "title": "Error Budget Burn Rate (1h) — Alert if > 14.4x",
      "type": "timeseries",
      "targets": [
        { "expr": "sum(rate(http_requests_total{job=\"api-gateway\",status=~\"5..\"}[1h])) / sum(rate(http_requests_total{job=\"api-gateway\"}[1h])) / (1 - 0.999)", "legendFormat": "API Gateway burn", "refId": "A" },
        { "expr": "sum(rate(http_requests_total{job=\"order-payment-service\",status=~\"5..\"}[1h])) / sum(rate(http_requests_total{job=\"order-payment-service\"}[1h])) / (1 - 0.999)", "legendFormat": "Order/Payment burn", "refId": "B" },
        { "expr": "sum(rate(http_requests_total{job=\"auth-service\",status=~\"5..\"}[1h])) / sum(rate(http_requests_total{job=\"auth-service\"}[1h])) / (1 - 0.999)", "legendFormat": "Auth burn", "refId": "C" },
        { "expr": "14.4", "legendFormat": "Fast Burn Threshold", "refId": "D" }
      ]
    }
  ],
  "refresh": "5m",
  "schemaVersion": 38,
  "tags": ["lomash-wood", "sla", "slo"],
  "templating": { "list": [] },
  "time": { "from": "now-30d", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "SLA / SLO",
  "uid": "lomash-sla-slo",
  "version": 1,
  "weekStart": ""
}
