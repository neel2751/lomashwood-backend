      "title": "Request Rate",
      "type": "stat",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "sum(rate(http_requests_total{job=\"api-gateway\"}[5m]))",
          "legendFormat": "req/s",
          "refId": "A"
