{
  "name": "lomash-wood-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Lomash Wood kitchen and bedroom design platform â€” Node.js microservices backend",
  "license": "UNLICENSED",
  "author": {
    "name": "Lomash Wood Engineering",
    "email": "engineering@lomashwood.com"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.1.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:gateway": "turbo run dev --filter=api-gateway",
    "dev:auth": "turbo run dev --filter=auth-service",
    "dev:product": "turbo run dev --filter=product-service",
    "dev:order": "turbo run dev --filter=order-payment-service",
    "dev:appointment": "turbo run dev --filter=appointment-service",
    "dev:content": "turbo run dev --filter=content-service",
    "dev:customer": "turbo run dev --filter=customer-service",
    "dev:notification": "turbo run dev --filter=notification-service",
    "dev:analytics": "turbo run dev --filter=analytics-service",
    "build": "turbo run build",
    "build:shared": "turbo run build --filter=./packages/*",
    "build:services": "turbo run build --filter=./apps/*",
    "start": "turbo run start --parallel",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "bash scripts/test.sh e2e",
    "test:ci": "bash scripts/test.sh ci",
    "test:watch": "turbo run test:watch --parallel",
    "test:coverage": "COVERAGE=true turbo run test:unit",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:sh": "shellcheck scripts/*.sh",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo run typecheck",
    "db:generate": "turbo run generate --filter=shared-db",
    "db:migrate": "bash scripts/migrate.sh development deploy",
    "db:migrate:prod": "bash scripts/migrate.sh production deploy",
    "db:migrate:status": "bash scripts/migrate.sh development status",
    "db:reset": "bash scripts/migrate.sh development reset",
    "db:seed": "bash scripts/seed.sh development standard",
    "db:seed:demo": "bash scripts/seed.sh development demo",
    "db:seed:test": "bash scripts/seed.sh test test",
    "db:studio": "pnpm --filter=shared-db exec prisma studio",
    "bootstrap": "bash scripts/bootstrap.sh development",
    "bootstrap:ci": "bash scripts/bootstrap.sh ci",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:prod": "bash scripts/deploy.sh production",
    "rollback:staging": "bash scripts/rollback.sh staging",
    "rollback:prod": "bash scripts/rollback.sh production",
    "rotate:keys": "bash security/secrets-rotation/rotate-keys.sh",
    "rotate:db": "bash security/secrets-rotation/rotate-db-passwords.sh",
    "rotate:tokens": "bash security/secrets-rotation/rotate-api-tokens.sh",
    "clean": "turbo run clean && bash scripts/clean.sh standard",
    "clean:deep": "bash scripts/clean.sh deep",
    "clean:all": "bash scripts/clean.sh all",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.1.0",
    "pg": "^8.18.0",
    "tslib": "^2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "dotenv": "^17.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.8.1",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-unicorn": "^54.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.0.11",
    "knip": "^5.17.1",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^7.4.1",
    "secretlint": "^8.2.3",
    "turbo": "^2.0.3",
    "typescript": "^5.4.5",
    "vitest": "^2.1.9"
  },
  "pnpm": {
    "overrides": {
      "semver": ">=7.5.4",
      "tough-cookie": ">=4.1.3",
      "word-wrap": ">=1.2.4",
      "braces": ">=3.0.3",
      "micromatch": ">=4.0.8",
      "ws": ">=8.17.1"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom",
        "@types/react"
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.prisma": [
      "prettier --write"
    ],
    "*.sh": [
      "shellcheck"
    ]
  },
  "commitlint": {
    "extends": [
      "./commitlint.config.js"
    ]
  },
  "turbo": {
    "extends": [
      "//"
    ]
  }
}