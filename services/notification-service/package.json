{
  "name": "@lomash-wood/notification-service",
  "version": "1.0.0",
  "description": "Lomash Wood â€“ Notification Service (Email, SMS, Push)",
  "author": "Lomash Wood Engineering",
  "license": "UNLICENSED",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "start": "node dist/main.js",
    "start:dev": "nodemon",
    "start:debug": "nodemon --inspect",
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=tests/unit --passWithNoTests",
    "test:integration": "jest --testPathPattern=tests/integration --passWithNoTests --runInBand",
    "test:e2e": "jest --testPathPattern=tests/e2e --passWithNoTests --runInBand",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "prisma:generate": "prisma generate --config prisma.config.ts",
    "prisma:migrate:dev": "prisma migrate dev --config prisma.config.ts",
    "prisma:migrate:deploy": "prisma migrate deploy --config prisma.config.ts",
    "prisma:migrate:reset": "prisma migrate reset --force --config prisma.config.ts",
    "prisma:studio": "prisma studio --config prisma.config.ts",
    "prisma:seed": "ts-node prisma/seed.ts",
    "db:migrate": "npm run prisma:migrate:deploy && npm run prisma:generate",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.600.0",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "better-auth": "^1.0.0",
    "bullmq": "^5.12.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.3.1",
    "express-slow-down": "^2.0.1",
    "firebase-admin": "^12.3.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "msg91": "^2.1.0",
    "nodemailer": "^6.9.14",
    "pg": "^8.13.0",
    "pino": "^9.3.2",
    "pino-http": "^10.2.0",
    "pino-pretty": "^11.2.1",
    "reflect-metadata": "^0.2.2",
    "twilio": "^5.2.2",
    "uuid": "^10.0.0",
    "web-push": "^3.6.7",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@lomash-wood/eslint-config": "workspace:*",
    "@lomash-wood/tsconfig": "workspace:*",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.11",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/web-push": "^3.6.3",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^7.4.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": ".",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.e2e.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.types.ts",
      "!src/**/*.constants.ts",
      "!src/main.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [],
    "globalSetup": "<rootDir>/tests/e2e/global-setup.ts",
    "globalTeardown": "<rootDir>/tests/e2e/global-teardown.ts"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}