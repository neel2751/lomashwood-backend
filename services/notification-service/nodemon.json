{
  "watch": [
    "src",
    "prisma/schema.prisma",
    ".env"
  ],
  "ext": "ts,json,prisma",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts",
    "src/tests-helpers/**",
    "tests/**",
    "dist/**",
    "coverage/**",
    "node_modules/**"
  ],
  "exec": "ts-node --require tsconfig-paths/register --project tsconfig.json src/main.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_TRANSPILE_ONLY": "true",
    "TS_NODE_FILES": "true"
  },
  "delay": 500,
  "legacyWatch": false,
  "verbose": true,
  "colours": true,
  "signal": "SIGTERM",
  "restartable": "rs"
}