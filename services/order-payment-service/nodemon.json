{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist",
    "coverage",
    "prisma/migrations",
    "*.log"
  ],
  "exec": "ts-node -r tsconfig-paths/register src/main.ts",
  "env": {
    "NODE_ENV": "development",
    "LOG_LEVEL": "debug"
  },
  "delay": 1000,
  "colours": true,
  "verbose": true,
  "restartable": "rs",
  "events": {
    "start": "echo 'ðŸš€ Order Payment Service starting...'",
    "restart": "echo 'ðŸ”„ Order Payment Service restarting due to file changes...'",
    "crash": "echo 'ðŸ’¥ Order Payment Service crashed - waiting for file changes before restart...'",
    "exit": "echo 'ðŸ‘‹ Order Payment Service has exited'"
  },
  "signal": "SIGTERM",
  "exitcrash": false,
  "legacyWatch": false,
  "runOnChangeOnly": false
}