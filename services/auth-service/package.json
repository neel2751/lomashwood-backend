{
  "name": "@lomash-wood/auth-service",
  "version": "1.0.0",
  "description": "Authentication & Authorization microservice for Lomash Wood platform",
  "author": "Lomash Wood Engineering Team",
  "license": "UNLICENSED",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "start": "node dist/main.js",
    "start:dev": "nodemon",
    "start:debug": "nodemon --inspect",
    "start:prod": "node dist/main.js",
    "lint": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern='tests/unit'",
    "test:integration": "jest --testPathPattern='tests/integration'",
    "test:e2e": "jest --testPathPattern='tests/e2e' --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --runInBand --forceExit",
    "db:generate": "prisma generate --config prisma.config.ts",
    "db:migrate": "prisma migrate deploy --config prisma.config.ts",
    "db:migrate:dev": "prisma migrate dev --config prisma.config.ts",
    "db:migrate:reset": "prisma migrate reset --force --config prisma.config.ts",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio --config prisma.config.ts",
    "db:push": "prisma db push --config prisma.config.ts",
    "db:pull": "prisma db pull --config prisma.config.ts",
    "docker:build": "docker build -t lomash-wood/auth-service:latest .",
    "docker:run": "docker run -p 3001:3001 --env-file .env lomash-wood/auth-service:latest",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean",
    "postinstall": "prisma generate --config prisma.config.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.2.7",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "node-cron": "^3.0.3",
    "nodemailer": "^8.0.1",
    "otplib": "^12.0.1",
    "pg": "^8.13.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^5.0.4",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@jest/globals": "^27.5.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@types/ms": "^0.7.34",
    "@types/node": "^22.13.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.0",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "bcrypt": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^1.14.0",
    "jest": "^25.0.0",
    "jest-mock-extended": "^3.0.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "prisma": "^7.4.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": ".",
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts",
      "<rootDir>/tests/**/*.e2e.ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@app/(.*)$": "<rootDir>/src/app/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
      "^@interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
      "^@shared/(.*)$": "<rootDir>/src/shared/$1",
      "^@jobs/(.*)$": "<rootDir>/src/jobs/$1",
      "^@events/(.*)$": "<rootDir>/src/events/$1",
      "^@tests-helpers/(.*)$": "<rootDir>/src/tests-helpers/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/main.ts",
      "!src/**/*.types.ts",
      "!src/**/*.constants.ts",
      "!src/infrastructure/db/migrations.ts",
      "!src/infrastructure/db/prisma.client.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "globalSetup": "<rootDir>/src/tests-helpers/setup.ts",
    "setupFilesAfterFramework": [],
    "testTimeout": 30000,
    "clearMocks": true,
    "restoreMocks": true,
    "verbose": true
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  }
}