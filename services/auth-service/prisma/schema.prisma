

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String?  @map("first_name")
  lastName  String?  @map("last_name")
  phone     String?
  isActive  Boolean  @default(true) @map("is_active")
  isVerified Boolean @default(false) @map("is_verified")
  
  emailVerificationToken String?   @map("email_verification_token")
  emailVerifiedAt        DateTime? @map("email_verified_at")
  
  passwordResetToken     String?   @map("password_reset_token")
  passwordResetExpiresAt DateTime? @map("password_reset_expires_at")
  
  lastLoginAt            DateTime? @map("last_login_at")
  lastPasswordChangeAt   DateTime? @map("last_password_change_at")
  failedLoginAttempts    Int       @default(0) @map("failed_login_attempts")
  lockedUntil            DateTime? @map("locked_until")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  sessions      Session[]
  userRoles     UserRole[]
  refreshTokens RefreshToken[]
  loginHistory  LoginHistory[]
  otpCodes      OTPCode[]

  @@map("users")
  @@index([email])
  @@index([isActive])
  @@index([createdAt])
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  permissions Json?   
  isActive    Boolean  @default(true) @map("is_active")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

 
  userRoles UserRole[]

  @@map("roles")
  @@index([name])
}

model UserRole {
  id     String @id @default(uuid())
  userId String @map("user_id")
  roleId String @map("role_id")
  
  assignedAt DateTime @default(now()) @map("assigned_at")
  assignedBy String?  @map("assigned_by")


  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@map("user_roles")
  @@index([userId])
  @@index([roleId])
}

model Session {
  id           String    @id @default(uuid())
  userId       String    @map("user_id")
  token        String    @unique
  ipAddress    String?   @map("ip_address")
  userAgent    String?   @map("user_agent")
  deviceInfo   Json?     @map("device_info")
  isValid      Boolean   @default(true) @map("is_valid")
  expiresAt    DateTime  @map("expires_at")
  lastActiveAt DateTime  @default(now()) @map("last_active_at")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  revokedAt DateTime? @map("revoked_at")

 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@index([isValid])
}

model RefreshToken {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  token     String    @unique
  isRevoked Boolean   @default(false) @map("is_revoked")
  expiresAt DateTime  @map("expires_at")
  
  createdAt DateTime  @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

model LoginHistory {
  id         String   @id @default(uuid())
  userId     String?  @map("user_id")
  email      String
  status     LoginStatus
  ipAddress  String?  @map("ip_address")
  userAgent  String?  @map("user_agent")
  location   String?
  reason     String?  
  metadata   Json?
  
  createdAt DateTime @default(now()) @map("created_at")

  
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("login_history")
  @@index([userId])
  @@index([email])
  @@index([status])
  @@index([createdAt])
}

enum LoginStatus {
  SUCCESS
  FAILED
  BLOCKED
  LOCKED_ACCOUNT
}

model OTPCode {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  code      String
  purpose   OTPPurpose
  isUsed    Boolean   @default(false) @map("is_used")
  expiresAt DateTime  @map("expires_at")
  
  createdAt DateTime  @default(now()) @map("created_at")
  usedAt    DateTime? @map("used_at")

  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("otp_codes")
  @@index([userId])
  @@index([code])
  @@index([purpose])
  @@index([expiresAt])
}

enum OTPPurpose {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  TWO_FACTOR_AUTH
  PHONE_VERIFICATION
}

model TokenBlacklist {
  id        String   @id @default(uuid())
  token     String   @unique
  reason    String?
  expiresAt DateTime @map("expires_at")
  
  createdAt DateTime @default(now()) @map("created_at")

  @@map("token_blacklist")
  @@index([token])
  @@index([expiresAt])
}

model PasswordHistory {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  passwordHash   String   @map("password_hash")
  
  createdAt DateTime @default(now()) @map("created_at")

  @@map("password_history")
  @@index([userId])
  @@index([createdAt])
}

model SecurityQuestion {
  id       String @id @default(uuid())
  question String @unique
  isActive Boolean @default(true) @map("is_active")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

 
  userAnswers UserSecurityAnswer[]

  @@map("security_questions")
}

model UserSecurityAnswer {
  id         String @id @default(uuid())
  userId     String @map("user_id")
  questionId String @map("question_id")
  answerHash String @map("answer_hash")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")


  question SecurityQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
  @@map("user_security_answers")
  @@index([userId])
}
