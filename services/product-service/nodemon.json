{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist",
    "coverage",
    "logs",
    ".git"
  ],
  "exec": "ts-node -r tsconfig-paths/register src/main.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "verbose": true,
  "delay": 1000,
  "colours": true,
  "signal": "SIGTERM",
  "events": {
    "restart": "clear && echo 'ðŸ”„ Restarting product-service...'",
    "crash": "echo 'ðŸ’¥ Service crashed - waiting for changes...'",
    "start": "echo 'ðŸš€ Product service started successfully'"
  },
  "legacyWatch": false,
  "runOnChangeOnly": false
}