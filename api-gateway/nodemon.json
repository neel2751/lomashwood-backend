{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts",
    "node_modules",
    "dist"
  ],
  "exec": "ts-node -r tsconfig-paths/register src/main.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 500,
  "legacyWatch": false,
  "verbose": true
}