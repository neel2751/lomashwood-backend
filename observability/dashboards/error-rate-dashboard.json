{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus" }],
  "title": "Lomash Wood â€” Error Rates",
  "uid": "lw-error-rates",
  "tags": ["lomash-wood", "errors"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1, "type": "stat", "title": "Overall Error Rate %",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "100 * sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m]))", "legendFormat": "Error %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 5 }] } } }
    },
    {
      "id": 2, "type": "stat", "title": "4xx Rate %",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "100 * sum(rate(http_requests_total{status_code=~\"4..\"}[5m])) / sum(rate(http_requests_total[5m]))", "legendFormat": "4xx %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 5 }, { "color": "red", "value": 15 }] } } }
    },
    {
      "id": 3, "type": "stat", "title": "5xx Rate %",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "100 * sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m]))", "legendFormat": "5xx %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.5 }, { "color": "red", "value": 2 }] } } }
    },
    {
      "id": 4, "type": "stat", "title": "Errors/min (5m avg)",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) * 60", "legendFormat": "Errors/min" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 10 }, { "color": "red", "value": 50 }] } } }
    },
    {
      "id": 5, "type": "stat", "title": "Unhandled Exceptions (5m)",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(nodejs_unhandled_rejections_total[5m]))", "legendFormat": "Unhandled" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] } } }
    },
    {
      "id": 6, "type": "stat", "title": "DB Errors (5m)",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(prisma_client_queries_errors_total[5m]))", "legendFormat": "DB Errors" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 10 }] } } }
    },
    {
      "id": 7, "type": "timeseries", "title": "Error Rate by Service",
      "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 },
      "targets": [
        { "expr": "100 * sum(rate(http_requests_total{status_code=~\"5..\"}[2m])) by (service) / sum(rate(http_requests_total[2m])) by (service)", "legendFormat": "{{ service }}" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "custom": { "lineWidth": 2 }, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 5 }] } } }
    },
    {
      "id": 8, "type": "timeseries", "title": "4xx vs 5xx Breakdown",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(http_requests_total{status_code=~\"4..\"}[2m])) by (status_code)", "legendFormat": "{{ status_code }}" },
        { "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[2m])) by (status_code)", "legendFormat": "{{ status_code }}" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 9, "type": "timeseries", "title": "Error Rate by Route (Top 10)",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [{ "expr": "topk(10, sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) by (route, service))", "legendFormat": "{{ service }} - {{ route }}" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 10, "type": "timeseries", "title": "Prisma Query Errors by Service",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(prisma_client_queries_errors_total[2m])) by (service)", "legendFormat": "{{ service }}" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 11, "type": "timeseries", "title": "Redis Errors by Service",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(redis_command_errors_total[2m])) by (service)", "legendFormat": "{{ service }}" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    }
  ]
}