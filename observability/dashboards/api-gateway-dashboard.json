{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus" }],
  "title": "Lomash Wood â€” API Gateway",
  "uid": "lw-api-gateway",
  "tags": ["lomash-wood", "api-gateway"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1, "type": "stat", "title": "Total RPS",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(rate(http_requests_total{service=\"api-gateway\"}[2m]))", "legendFormat": "RPS" }],
      "options": { "colorMode": "background", "graphMode": "area", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 500 }, { "color": "red", "value": 1000 }] } } }
    },
    {
      "id": 2, "type": "stat", "title": "Error Rate %",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "100 * sum(rate(http_requests_total{service=\"api-gateway\",status_code=~\"5..\"}[2m])) / sum(rate(http_requests_total{service=\"api-gateway\"}[2m]))", "legendFormat": "Error %" }],
      "options": { "colorMode": "background", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 5 }] } } }
    },
    {
      "id": 3, "type": "stat", "title": "P99 Latency",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"api-gateway\"}[2m])) by (le))", "legendFormat": "P99" }],
      "options": { "colorMode": "background", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "unit": "s", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 3 }] } } }
    },
    {
      "id": 4, "type": "stat", "title": "Active Connections",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(nodejs_active_handles_total{service=\"api-gateway\"})", "legendFormat": "Connections" }],
      "options": { "colorMode": "value", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 500 }, { "color": "red", "value": 1000 }] } } }
    },
    {
      "id": 5, "type": "stat", "title": "Uptime",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "process_uptime_seconds{service=\"api-gateway\"}", "legendFormat": "Uptime" }],
      "options": { "colorMode": "value", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "id": 6, "type": "stat", "title": "Rate Limited Requests",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(rate(http_requests_total{service=\"api-gateway\",status_code=\"429\"}[5m]))", "legendFormat": "Rate Limited" }],
      "options": { "colorMode": "background", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 10 }] } } }
    },
    {
      "id": 7, "type": "timeseries", "title": "Request Rate by Status Code",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(http_requests_total{service=\"api-gateway\",status_code=~\"2..\"}[2m]))", "legendFormat": "2xx" },
        { "expr": "sum(rate(http_requests_total{service=\"api-gateway\",status_code=~\"4..\"}[2m]))", "legendFormat": "4xx" },
        { "expr": "sum(rate(http_requests_total{service=\"api-gateway\",status_code=~\"5..\"}[2m]))", "legendFormat": "5xx" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "lineWidth": 2 } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "2xx" }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "4xx" }, "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "5xx" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "id": 8, "type": "timeseries", "title": "Latency Percentiles",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{service=\"api-gateway\"}[2m])) by (le))", "legendFormat": "P50" },
        { "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"api-gateway\"}[2m])) by (le))", "legendFormat": "P95" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"api-gateway\"}[2m])) by (le))", "legendFormat": "P99" }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "custom": { "lineWidth": 2 } } }
    },
    {
      "id": 9, "type": "timeseries", "title": "Request Rate by Route",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "targets": [{ "expr": "sum(rate(http_requests_total{service=\"api-gateway\"}[2m])) by (route)", "legendFormat": "{{ route }}" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 10, "type": "timeseries", "title": "Node.js Memory Usage",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "targets": [
        { "expr": "nodejs_heap_size_used_bytes{service=\"api-gateway\"}", "legendFormat": "Heap Used" },
        { "expr": "nodejs_heap_size_total_bytes{service=\"api-gateway\"}", "legendFormat": "Heap Total" },
        { "expr": "nodejs_external_memory_bytes{service=\"api-gateway\"}", "legendFormat": "External" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "id": 11, "type": "timeseries", "title": "Node.js Event Loop Lag",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "targets": [{ "expr": "nodejs_eventloop_lag_seconds{service=\"api-gateway\"}", "legendFormat": "Event Loop Lag" }],
      "fieldConfig": { "defaults": { "unit": "s", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 0.1 }] } } }
    }
  ]
}