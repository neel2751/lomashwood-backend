{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus" }],
  "title": "Lomash Wood â€” Content Service",
  "uid": "lw-content",
  "tags": ["lomash-wood", "content-service"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "60s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1, "type": "stat", "title": "Blog Posts Published (24h)",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(blog_published_total{service=\"content-service\"}[24h]))", "legendFormat": "Posts" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 2, "type": "stat", "title": "Media Uploads (24h)",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(media_uploads_total{service=\"content-service\"}[24h]))", "legendFormat": "Uploads" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 3, "type": "stat", "title": "S3 Upload Error Rate",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "100 * sum(rate(media_upload_errors_total{service=\"content-service\"}[5m])) / sum(rate(media_uploads_total{service=\"content-service\"}[5m]))", "legendFormat": "Error %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 5 }] } } }
    },
    {
      "id": 4, "type": "stat", "title": "Pages Published (24h)",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(cms_pages_published_total{service=\"content-service\"}[24h]))", "legendFormat": "Pages" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 5, "type": "stat", "title": "SEO Updates (24h)",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(seo_updates_total{service=\"content-service\"}[24h]))", "legendFormat": "SEO Updates" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 6, "type": "stat", "title": "Content Service Error Rate",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "100 * sum(rate(http_requests_total{service=\"content-service\",status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total{service=\"content-service\"}[5m]))", "legendFormat": "Error %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 5 }] } } }
    },
    {
      "id": 7, "type": "timeseries", "title": "Content Requests by Type",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(http_requests_total{service=\"content-service\"}[2m])) by (route)", "legendFormat": "{{ route }}" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 8, "type": "timeseries", "title": "Media Upload Rate & Size",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(media_uploads_total{service=\"content-service\"}[5m]))", "legendFormat": "Upload Rate" },
        { "expr": "sum(rate(media_upload_bytes_total{service=\"content-service\"}[5m]))", "legendFormat": "Bytes/s" }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },
    {
      "id": 9, "type": "timeseries", "title": "Content API Latency (P99)",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"content-service\",route=\"/v1/blog\"}[2m])) by (le))", "legendFormat": "GET /v1/blog P99" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"content-service\",route=\"/v1/uploads\"}[2m])) by (le))", "legendFormat": "POST /v1/uploads P99" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    }
  ]
}