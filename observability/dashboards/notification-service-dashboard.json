{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus" }],
  "title": "Lomash Wood â€” Notification Service",
  "uid": "lw-notification",
  "tags": ["lomash-wood", "notification-service"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1, "type": "stat", "title": "Emails Sent (1h)",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(notifications_sent_total{service=\"notification-service\",channel=\"email\"}[1h]))", "legendFormat": "Emails" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 2, "type": "stat", "title": "SMS Sent (1h)",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(notifications_sent_total{service=\"notification-service\",channel=\"sms\"}[1h]))", "legendFormat": "SMS" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 3, "type": "stat", "title": "Delivery Success Rate %",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "100 * sum(rate(notifications_sent_total{service=\"notification-service\",result=\"success\"}[5m])) / sum(rate(notifications_sent_total{service=\"notification-service\"}[5m]))", "legendFormat": "Success %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 90 }, { "color": "green", "value": 98 }] } } }
    },
    {
      "id": 4, "type": "stat", "title": "Failed Deliveries (5m)",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(notifications_failed_total{service=\"notification-service\"}[5m]))", "legendFormat": "Failed" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 3 }, { "color": "red", "value": 10 }] } } }
    },
    {
      "id": 5, "type": "stat", "title": "Retry Queue Size",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(notification_retry_queue_size{service=\"notification-service\"})", "legendFormat": "Queue" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 100 }, { "color": "red", "value": 500 }] } } }
    },
    {
      "id": 6, "type": "stat", "title": "Templates Active",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(notification_templates_active{service=\"notification-service\"})", "legendFormat": "Templates" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 7, "type": "timeseries", "title": "Notification Volume by Channel",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(notifications_sent_total{service=\"notification-service\"}[2m])) by (channel)", "legendFormat": "{{ channel }}" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 8, "type": "timeseries", "title": "Delivery Success vs Failure by Channel",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(notifications_sent_total{service=\"notification-service\",result=\"success\"}[2m])) by (channel)", "legendFormat": "Success - {{ channel }}" },
        { "expr": "sum(rate(notifications_failed_total{service=\"notification-service\"}[2m])) by (channel)", "legendFormat": "Failure - {{ channel }}" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 9, "type": "timeseries", "title": "Notification Type Breakdown",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(notifications_sent_total{service=\"notification-service\"}[5m])) by (notification_type)", "legendFormat": "{{ notification_type }}" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 10, "type": "timeseries", "title": "Retry Rate Over Time",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(notifications_retried_total{service=\"notification-service\"}[5m]))", "legendFormat": "Retries/s" }],
      "fieldConfig": { "defaults": { "unit": "reqps", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] } } }
    }
  ]
}