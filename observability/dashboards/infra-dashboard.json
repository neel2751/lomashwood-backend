{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus" }],
  "title": "Lomash Wood â€” Infrastructure",
  "uid": "lw-infra",
  "tags": ["lomash-wood", "infrastructure"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1, "type": "stat", "title": "Total Services Online",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "count(up{job=~\"api-gateway|auth-service|product-service|order-payment-service|appointment-service|content-service|customer-service|notification-service|analytics-service\"} == 1)", "legendFormat": "Online" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 7 }, { "color": "green", "value": 9 }] } } }
    },
    {
      "id": 2, "type": "stat", "title": "CPU Usage (Avg %)",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "avg(100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[2m])) * 100))", "legendFormat": "CPU %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 70 }, { "color": "red", "value": 90 }] } } }
    },
    {
      "id": 3, "type": "stat", "title": "Memory Usage (Avg %)",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "avg(100 * (1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))", "legendFormat": "Memory %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 75 }, { "color": "red", "value": 90 }] } } }
    },
    {
      "id": 4, "type": "stat", "title": "Disk Usage (Avg %)",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "avg(100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100))", "legendFormat": "Disk %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 75 }, { "color": "red", "value": 90 }] } } }
    },
    {
      "id": 5, "type": "stat", "title": "Network In (Avg)",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "avg(rate(node_network_receive_bytes_total{device!=\"lo\"}[2m]))", "legendFormat": "In" }],
      "fieldConfig": { "defaults": { "unit": "binBps" } }
    },
    {
      "id": 6, "type": "stat", "title": "Network Out (Avg)",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "avg(rate(node_network_transmit_bytes_total{device!=\"lo\"}[2m]))", "legendFormat": "Out" }],
      "fieldConfig": { "defaults": { "unit": "binBps" } }
    },
    {
      "id": 7, "type": "timeseries", "title": "CPU Usage by Service",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(process_cpu_seconds_total[2m])) by (service) * 100", "legendFormat": "{{ service }}" }],
      "fieldConfig": { "defaults": { "unit": "percent" } }
    },
    {
      "id": 8, "type": "timeseries", "title": "Memory Usage by Service",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(nodejs_heap_size_used_bytes) by (service)", "legendFormat": "{{ service }}" }],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "id": 9, "type": "timeseries", "title": "Service Health (Up/Down)",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "targets": [{ "expr": "up{job=~\"api-gateway|auth-service|product-service|order-payment-service|appointment-service|content-service|customer-service|notification-service|analytics-service\"}", "legendFormat": "{{ job }}" }],
      "fieldConfig": { "defaults": { "min": 0, "max": 1, "thresholds": { "steps": [{ "color": "red", "value": null }, { "color": "green", "value": 1 }] }, "custom": { "lineWidth": 2, "fillOpacity": 20 } } }
    },
    {
      "id": 10, "type": "timeseries", "title": "Node.js Event Loop Lag by Service",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "targets": [{ "expr": "nodejs_eventloop_lag_seconds", "legendFormat": "{{ service }}" }],
      "fieldConfig": { "defaults": { "unit": "s", "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 0.1 }] } } }
    },
    {
      "id": 11, "type": "timeseries", "title": "Active HTTP Handles by Service",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "targets": [{ "expr": "nodejs_active_handles_total", "legendFormat": "{{ service }}" }],
      "fieldConfig": { "defaults": { "unit": "short" } }
    }
  ]
}