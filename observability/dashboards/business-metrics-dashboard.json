{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus" }],
  "title": "Lomash Wood — Business Metrics",
  "uid": "lw-business",
  "tags": ["lomash-wood", "business", "kpi"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "5m",
  "time": { "from": "now-24h", "to": "now" },
  "panels": [
    {
      "id": 1, "type": "stat", "title": "Total Revenue (24h)",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(payment_amount_total{result=\"success\"}[24h]))", "legendFormat": "Revenue" }],
      "fieldConfig": { "defaults": { "unit": "currencyGBP", "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 2, "type": "stat", "title": "Orders (24h)",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(orders_created_total[24h]))", "legendFormat": "Orders" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 3, "type": "stat", "title": "Appointments (24h)",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(bookings_created_total[24h]))", "legendFormat": "Appointments" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 4, "type": "stat", "title": "New Customers (24h)",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(customer_profiles_created_total[24h]))", "legendFormat": "New Customers" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 5, "type": "stat", "title": "Brochure Requests (24h)",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(brochure_requests_total[24h]))", "legendFormat": "Brochures" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 6, "type": "stat", "title": "Business Enquiries (24h)",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(business_enquiries_total[24h]))", "legendFormat": "Enquiries" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 7, "type": "timeseries", "title": "Revenue Over Time",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [{ "expr": "sum(rate(payment_amount_total{result=\"success\"}[1h])) * 3600", "legendFormat": "Revenue/hr" }],
      "fieldConfig": { "defaults": { "unit": "currencyGBP" } }
    },
    {
      "id": 8, "type": "timeseries", "title": "Appointment Bookings by Type",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(bookings_created_total{type=\"home\"}[1h])) * 3600", "legendFormat": "Home Visit" },
        { "expr": "sum(rate(bookings_created_total{type=\"online\"}[1h])) * 3600", "legendFormat": "Online" },
        { "expr": "sum(rate(bookings_created_total{type=\"showroom\"}[1h])) * 3600", "legendFormat": "Showroom" }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },
    {
      "id": 9, "type": "timeseries", "title": "Lead Funnel — Conversion Activity",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(brochure_requests_total[1h])) * 3600", "legendFormat": "Brochure Requests" },
        { "expr": "sum(rate(bookings_created_total[1h])) * 3600", "legendFormat": "Appointments" },
        { "expr": "sum(rate(orders_created_total[1h])) * 3600", "legendFormat": "Orders" }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },
    {
      "id": 10, "type": "timeseries", "title": "Newsletter & Review Activity",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(newsletter_subscriptions_total[1h])) * 3600", "legendFormat": "Newsletter Sign-ups" },
        { "expr": "sum(rate(reviews_created_total[1h])) * 3600", "legendFormat": "Reviews Submitted" }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },
    {
      "id": 11, "type": "piechart", "title": "Appointment Type Split",
      "gridPos": { "x": 0, "y": 20, "w": 8, "h": 8 },
      "targets": [
        { "expr": "sum(increase(bookings_created_total{type=\"home\"}[24h]))", "legendFormat": "Home" },
        { "expr": "sum(increase(bookings_created_total{type=\"online\"}[24h]))", "legendFormat": "Online" },
        { "expr": "sum(increase(bookings_created_total{type=\"showroom\"}[24h]))", "legendFormat": "Showroom" }
      ],
      "options": { "pieType": "donut" }
    },
    {
      "id": 12, "type": "piechart", "title": "Order Category Split",
      "gridPos": { "x": 8, "y": 20, "w": 8, "h": 8 },
      "targets": [
        { "expr": "sum(increase(orders_created_total{category=\"kitchen\"}[24h]))", "legendFormat": "Kitchen" },
        { "expr": "sum(increase(orders_created_total{category=\"bedroom\"}[24h]))", "legendFormat": "Bedroom" }
      ],
      "options": { "pieType": "donut" }
    },
    {
      "id": 13, "type": "timeseries", "title": "Average Order Value Over Time",
      "gridPos": { "x": 16, "y": 20, "w": 8, "h": 8 },
      "targets": [{ "expr": "sum(rate(payment_amount_total{result=\"success\"}[1h])) / sum(rate(orders_completed_total[1h]))", "legendFormat": "AOV" }],
      "fieldConfig": { "defaults": { "unit": "currencyGBP" } }
    }
  ]
}