{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus" }],
  "title": "Lomash Wood — Auth Service",
  "uid": "lw-auth-service",
  "tags": ["lomash-wood", "auth-service"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1, "type": "stat", "title": "Login Success Rate %",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "100 * sum(rate(auth_login_total{service=\"auth-service\",result=\"success\"}[5m])) / sum(rate(auth_login_total{service=\"auth-service\"}[5m]))", "legendFormat": "Success %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 80 }, { "color": "green", "value": 95 }] } } }
    },
    {
      "id": 2, "type": "stat", "title": "Active Sessions",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(auth_active_sessions_total{service=\"auth-service\"})", "legendFormat": "Sessions" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 3, "type": "stat", "title": "Failed Logins (5m)",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(auth_login_total{service=\"auth-service\",result=\"failure\"}[5m]))", "legendFormat": "Failed" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 10 }, { "color": "red", "value": 50 }] } } }
    },
    {
      "id": 4, "type": "stat", "title": "Token Refresh Rate",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(rate(auth_token_refresh_total{service=\"auth-service\"}[5m]))", "legendFormat": "Refreshes/s" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 5, "type": "stat", "title": "Password Resets (1h)",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(auth_password_reset_total{service=\"auth-service\"}[1h]))", "legendFormat": "Resets" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 20 }] } } }
    },
    {
      "id": 6, "type": "stat", "title": "Registrations (1h)",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(auth_registration_total{service=\"auth-service\"}[1h]))", "legendFormat": "Registrations" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }] } } }
    },
    {
      "id": 7, "type": "timeseries", "title": "Login Attempts — Success vs Failure",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(auth_login_total{service=\"auth-service\",result=\"success\"}[2m]))", "legendFormat": "Success" },
        { "expr": "sum(rate(auth_login_total{service=\"auth-service\",result=\"failure\"}[2m]))", "legendFormat": "Failure" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" },
        "overrides": [
          { "matcher": { "id": "byName", "options": "Success" }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "Failure" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "id": 8, "type": "timeseries", "title": "Auth Endpoint Latency (P99)",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"auth-service\",route=\"/v1/auth/login\"}[2m])) by (le))", "legendFormat": "POST /v1/auth/login" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"auth-service\",route=\"/v1/auth/register\"}[2m])) by (le))", "legendFormat": "POST /v1/auth/register" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"auth-service\",route=\"/v1/auth/me\"}[2m])) by (le))", "legendFormat": "GET /v1/auth/me" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "id": 9, "type": "timeseries", "title": "Token Blacklist Size",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [{ "expr": "auth_token_blacklist_size{service=\"auth-service\"}", "legendFormat": "Blacklisted Tokens" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 10000 }] } } }
    },
    {
      "id": 10, "type": "timeseries", "title": "Session Creation & Expiry Rate",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(auth_session_created_total{service=\"auth-service\"}[2m]))", "legendFormat": "Created" },
        { "expr": "sum(rate(auth_session_expired_total{service=\"auth-service\"}[2m]))", "legendFormat": "Expired" },
        { "expr": "sum(rate(auth_session_revoked_total{service=\"auth-service\"}[2m]))", "legendFormat": "Revoked" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 11, "type": "timeseries", "title": "Auth Error Rate by Type",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 8 },
      "targets": [{ "expr": "sum(rate(http_requests_total{service=\"auth-service\",status_code=~\"4..|5..\"}[2m])) by (status_code)", "legendFormat": "{{ status_code }}" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    }
  ]
}