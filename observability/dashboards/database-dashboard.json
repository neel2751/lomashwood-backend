{
  "__inputs": [{ "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus" }],
  "title": "Lomash Wood â€” Database (PostgreSQL)",
  "uid": "lw-database",
  "tags": ["lomash-wood", "database", "postgresql"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1, "type": "stat", "title": "Active Connections",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(pg_stat_activity_count{state=\"active\"})", "legendFormat": "Active" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 80 }, { "color": "red", "value": 150 }] } } }
    },
    {
      "id": 2, "type": "stat", "title": "Idle Connections",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(pg_stat_activity_count{state=\"idle\"})", "legendFormat": "Idle" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 50 }] } } }
    },
    {
      "id": 3, "type": "stat", "title": "TPS (Transactions/s)",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(rate(pg_stat_database_xact_commit[2m])) + sum(rate(pg_stat_database_xact_rollback[2m]))", "legendFormat": "TPS" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 4, "type": "stat", "title": "Cache Hit Ratio %",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "100 * sum(pg_stat_database_blks_hit) / (sum(pg_stat_database_blks_hit) + sum(pg_stat_database_blks_read))", "legendFormat": "Hit Ratio %" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 90 }, { "color": "green", "value": 99 }] } } }
    },
    {
      "id": 5, "type": "stat", "title": "DB Size (Total)",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(pg_database_size_bytes)", "legendFormat": "Size" }],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "id": 6, "type": "stat", "title": "Deadlocks (5m)",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(increase(pg_stat_database_deadlocks[5m]))", "legendFormat": "Deadlocks" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] } } }
    },
    {
      "id": 7, "type": "timeseries", "title": "Transactions Per Second",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(pg_stat_database_xact_commit[2m]))", "legendFormat": "Commits/s" },
        { "expr": "sum(rate(pg_stat_database_xact_rollback[2m]))", "legendFormat": "Rollbacks/s" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 8, "type": "timeseries", "title": "Query Latency by Service",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.99, sum(rate(prisma_client_queries_duration_histogram_ms_bucket[2m])) by (le, service))", "legendFormat": "{{ service }} P99" }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "id": 9, "type": "timeseries", "title": "Connection Pool by Service",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "prisma_client_queries_active", "legendFormat": "{{ service }} Active Queries" },
        { "expr": "prisma_client_queries_wait", "legendFormat": "{{ service }} Waiting" }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },
    {
      "id": 10, "type": "timeseries", "title": "Rows Read vs Written",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(pg_stat_database_tup_fetched[2m]))", "legendFormat": "Rows Fetched" },
        { "expr": "sum(rate(pg_stat_database_tup_inserted[2m]))", "legendFormat": "Rows Inserted" },
        { "expr": "sum(rate(pg_stat_database_tup_updated[2m]))", "legendFormat": "Rows Updated" },
        { "expr": "sum(rate(pg_stat_database_tup_deleted[2m]))", "legendFormat": "Rows Deleted" }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },
    {
      "id": 11, "type": "timeseries", "title": "Long Running Queries",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 8 },
      "targets": [{ "expr": "count(pg_stat_activity_max_tx_duration{state=\"active\"} > 5)", "legendFormat": "Queries > 5s" }],
      "fieldConfig": { "defaults": { "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] } } }
    }
  ]
}